<style>
    nav {
        height: 64px;
        padding: 8px 16px 8px;
        background-color: #2A2A2A;
    }

    nav ul {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        display: flex;
        align-items: center;
    }

    nav ul li {
        list-style-type: none;
        font-size: 20px;
        margin-right: 16px;
        position: relative;
    }

    nav ul li:not(:first-child)::after {
        position: absolute;
        content: "";
        background-color: whitesmoke;
        width: 0;
        transition: width 0.2s ease-out, left 0.2s ease-out;
        height: 2px;
        bottom: -4px;
        left: 50%;
    }

    nav ul li:not(:first-child):hover::after {
        width: 100%;
        left: 0%;
    }

    nav ul li.selected {
        color: #f1c25a;
    }

    nav ul li.selected::after {
        background-color: #f1c25a;
    }

    nav ul li:first-child {
        font-size: 30px;
        margin-right: 42px;
        color: #f1c25a;
    }
</style>

<nav>
    <ul>
        <li><a href="/">Spooky's Advent of Code</a></li>
        {{#each years}}
        {{#ifEquals this ../year}}
        <li class="selected">
            {{else}}
        <li>
            {{/ifEquals}}
            <a href="/{{this}}/">{{this}}</a>
        </li>
        {{/each}}
    </ul>
</nav>