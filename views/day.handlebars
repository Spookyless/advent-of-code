<style>
    #answer {
        height: 100%;
        max-height: 420px;
        display: flex;
        justify-content: space-between;
    }

    #answer>div {
        width: 50%;
    }

    #answer>div:nth-child(1) {
        padding-right: 96px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
    }

    #answer>div:nth-child(2) {
        padding-left: 96px;
    }

    #answer>div:nth-child(2)>div {
        width: 100%;
        height: 50%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    #answer>div:nth-child(2)>div:nth-child(1) {
        padding-bottom: 16px;
    }

    #answer>div:nth-child(2)>div:nth-child(2) {
        padding-top: 16px;
    }

    #answer div div h3 {
        margin: 0;
        font-size: 24px;
        font-weight: 500;
        margin-bottom: 8px;
    }

    #answer>div:nth-child(2)>div>div {
        width: 100%;
        height: 100%;
        padding: 8px;
        overflow-x: hidden;
        overflow-y: auto;
        border: 1px solid #555555;
    }

    #answer textarea {
        height: calc(100% - 64px);
        width: 100%;
        background-color: #202020;
        border: 1px solid whitesmoke;
        border-radius: 4px;
        color: whitesmoke;
        padding: 8px;
        resize: none;
        font-size: 16px;
    }

    #answer textarea:focus {
        outline: none;
    }

    #answer button {
        width: 100%;
        max-width: 192px;
        height: 42px;
        cursor: pointer;
        font-size: 20px;
        background-color: transparent;
        border: 2px solid #f1c25a;
        color: #f1c25a;
        border-radius: 8px;
        transition: background-color 0.15s ease-in-out, color 0.15s ease-in-out;
    }

    #answer button:hover {
        background-color: #f1c25a;
        color: #121212;
    }
</style>

<div id="answer">
    <div>
        <textarea name="input" id="input" placeholder="Your input goes here..."></textarea>
        <button id="submit">Submit</button>
    </div>
    <div>
        <div>
            <h3>Base</h3>
            <div id="base"></div>
        </div>
        <div>
            <h3>Extra</h3>
            <div id="extra"></div>
        </div>
    </div>
</div>

<script>
    const text = document.getElementById("input");
    const but = document.getElementById("submit");
    const base = document.getElementById("base");
    const extra = document.getElementById("extra");

    but.addEventListener("click", () => {
        const body = { input: text.value };

        fetch(
            window.location.href,
            {
                method: "POST",
                body: JSON.stringify(body),
                headers: {
                    "Content-Type": "application/json"
                }
            })
            .then(res => res.json())
            .then(data => {
                base.innerText = data.base;
                extra.innerText = data.extra;
            });
    });
</script>